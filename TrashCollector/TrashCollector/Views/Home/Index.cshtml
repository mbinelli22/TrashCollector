    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Trash Collector</h1>
    <p class="lead">A webiste that helps you manage your trash pickup schedule for both customer and allows employees to manage their routes.</p>
    <p><a href="http://localhost:33938/Home/About" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
